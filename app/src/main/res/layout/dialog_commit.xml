<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_commit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/common_20"
        android:textColor="@color/color_item_text"
        android:textSize="@dimen/text_12"
        android:background="@color/color_white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_item_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_refuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/linearlayout_click_bg"
            android:gravity="center"
            android:padding="@dimen/common_16"
            android:text="拒绝"
            android:textColor="@color/color_item_text"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_item_text" />

        <TextView
            android:id="@+id/text_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/linearlayout_click_bg"
            android:gravity="center"
            android:padding="@dimen/common_16"
            android:text="允许"
            android:textColor="@color/commit_dialog_ok"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
</LinearLayout>
