<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/land_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.wtwd.standard.activity.LandChooseActivity">

    <include
        layout="@layout/tool_bar"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_106"
        android:background="@mipmap/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/btn_land_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_42"
            android:layout_marginLeft="@dimen/common_42"
            android:layout_marginRight="@dimen/common_42"
            android:layout_marginTop="@dimen/common_26"
            android:background="@drawable/bg_land_register_btn"
            android:text="@string/land_register"
            android:textColor="@color/color_register_btn"
            android:textSize="@dimen/text_16" />

        <Button
            android:id="@+id/btn_land_land"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40"
            android:layout_above="@+id/btn_land_register"
            android:layout_marginLeft="@dimen/common_42"
            android:layout_marginRight="@dimen/common_42"
            android:background="@drawable/click_bg_gradient"
            android:text="@string/land_land"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_16"

            />


    </RelativeLayout>

</LinearLayout>
