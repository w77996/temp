<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/index_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/tool_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_18"
            android:layout_marginTop="@dimen/common_10"
            android:text="请您留下宝贵的意见和建议"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_18"
            android:paddingRight="@dimen/common_18"
            android:paddingTop="@dimen/common_10"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="top|left"
                android:hint="请输入..."
                android:inputType="textMultiLine"
                android:minHeight="@dimen/common_160"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_14" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_40"
        android:layout_marginLeft="@dimen/common_42"
        android:layout_marginRight="@dimen/common_42"
        android:background="@drawable/button_click_animation"
        android:text="提交反馈"
        android:textColor="@color/alpha_white_8"
        android:textSize="@dimen/text_14" />

</RelativeLayout>
