<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_84"
    android:background="@color/index_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_12"
        android:layout_marginTop="@dimen/common_4"
        android:text="19:00"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_4"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view_msg_short"
            android:layout_width="@dimen/common_2"
            android:layout_height="@dimen/common_6"
            android:background="@color/time_line" />

        <RelativeLayout
            android:layout_width="@dimen/common_8"
            android:layout_height="@dimen/common_8"
            android:background="@drawable/circle_time_line">

            <ImageView
                android:id="@+id/img_read_msg"
                android:layout_width="@dimen/common_6"
                android:layout_height="@dimen/common_6"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_read_msg" />
        </RelativeLayout>

        <View
            android:id="@+id/view_msg_long"
            android:layout_width="@dimen/common_2"
            android:layout_height="match_parent"
            android:background="@color/time_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_64"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_12"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_8"
            android:layout_marginTop="@dimen/common_8"
            android:text="固件升级"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/text_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_8"
            android:layout_marginTop="@dimen/common_12"
            android:text="固件升级"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

</LinearLayout>
