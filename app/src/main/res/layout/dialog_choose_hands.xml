<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_left_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_click_bg"
        android:gravity="center"
        android:padding="@dimen/common_14"
        android:text="左手"
        android:textColor="@color/color_item_text"
        android:textSize="@dimen/text_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/alpha_black_6" />

    <TextView
        android:id="@+id/text_right_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_click_bg"
        android:gravity="center"
        android:padding="@dimen/common_14"
        android:text="右手"
        android:textColor="@color/color_item_text"
        android:textSize="@dimen/text_14" />
</LinearLayout>
