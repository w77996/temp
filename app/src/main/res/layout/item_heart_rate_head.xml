<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_34"
    android:background="@color/color_white">

    <View
        android:id="@+id/view_heart_head_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/common_12"
        android:layout_marginRight="@dimen/common_12"
        android:background="@color/index_bg" />

    <View
        android:id="@+id/view_heart_head_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/common_12"
        android:layout_marginRight="@dimen/common_12"
        android:background="@color/index_bg" />

    <TextView
        android:id="@+id/text_heart_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_12"
        android:layout_marginRight="@dimen/common_12"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_12" />

</RelativeLayout>
