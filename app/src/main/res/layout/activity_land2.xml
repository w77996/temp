<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/index_bg"
    android:orientation="vertical"
    tools:context="com.wtwd.standard.activity.LandActivity">

    <include
        layout="@layout/tool_bar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_54"
            android:background="@mipmap/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/img_land_country_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_34"
                android:background="@mipmap/land_country_bg" />

            <TextView
                android:id="@+id/land_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_34"
                android:text="中国 +86"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/edit_land_country_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_36"
                android:layout_marginLeft="@dimen/common_8"
                android:layout_toLeftOf="@id/land_country_name"
                android:layout_toRightOf="@id/img_land_country_bg"
                android:background="@null"
                android:hint="国家/地区"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/alpha_black_8"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/edit_land_country_edit"
                android:layout_below="@id/edit_land_country_edit"
                android:layout_marginRight="@dimen/common_34"
                android:background="@color/alpha_black_8" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_8">

            <ImageView
                android:id="@+id/img_land_account_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_34"
                android:background="@mipmap/land_account_bg" />


            <LinearLayout
                android:id="@+id/lin_clear_account"
                android:layout_width="@dimen/common_24"
                android:layout_height="@dimen/common_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_34"
                android:gravity="center_vertical|right">

                <ImageView
                    android:id="@+id/img_land_clear_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/land_clear_bg" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_land_account_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_36"
                android:layout_marginLeft="@dimen/common_8"
                android:layout_toLeftOf="@id/lin_clear_account"
                android:layout_toRightOf="@id/img_land_account_bg"
                android:background="@null"
                android:hint="请输入账户"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/alpha_black_8"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/edit_land_account_edit"
                android:layout_below="@id/edit_land_account_edit"
                android:layout_marginRight="@dimen/common_34"
                android:background="@color/alpha_black_8" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_8">

            <ImageView
                android:id="@+id/img_land_password_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_34"
                android:background="@mipmap/land_password_bg" />


            <LinearLayout
                android:id="@+id/lin_invisible_password"
                android:layout_width="@dimen/common_24"
                android:layout_height="@dimen/common_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_34"
                android:gravity="center_vertical|right">

                <ImageView
                    android:id="@+id/land_invisible_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/land_invisible_bg" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_land_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_36"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/common_8"
                android:layout_toLeftOf="@id/lin_invisible_password"
                android:layout_toRightOf="@+id/img_land_password_bg"
                android:background="@null"
                android:hint="请输入密码"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/alpha_black_8"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/edit_land_password_edit"
                android:layout_below="@id/edit_land_password_edit"
                android:layout_marginRight="@dimen/common_34"
                android:background="@color/alpha_black_8" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_land_land"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40"
            android:layout_marginLeft="@dimen/common_44"
            android:layout_marginRight="@dimen/common_44"
            android:background="@drawable/click_bg_gradient"
            android:text="@string/land_land"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common_64"
                android:text="@string/land_forget_password"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_64"
                android:text="@string/land_verifycode_land"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/common_2"
                android:layout_marginRight="@dimen/common_2"
                android:text="第三方登录"
                android:textColor="@color/alpha_black_8"
                android:textSize="@dimen/text_12"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_30"
                android:layout_toLeftOf="@id/text"
                android:background="@drawable/land_line_left" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_30"
                android:layout_toRightOf="@id/text"
                android:background="@drawable/land_line_right" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_90"
                android:background="@mipmap/facebook" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_90"
                android:background="@mipmap/twitter" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
